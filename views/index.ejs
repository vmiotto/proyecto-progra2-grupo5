<!DOCTYPE html>
<html lang="es">
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerlogueado.ejs')%>
	<% } else { %>
		<%- include('./partials/header.ejs')%>
	<% } %>
	
	<!-- Banner -->
	<div class="banner">
		
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= productos[i].id %>">
							<figure class="product-box_image">
								<% if(new Date(productos[i].createdAt) > new Date('2024-06-21')){ %>
								<img src= "<%=productos[i].imagen %>" alt="<%=productos[i].nombre_producto%>">
								<% }else{ %>
								<img src= "../imagenes/<%=productos[i].imagen %>" alt="<%=productos[i].nombre_producto%>">
								<% } %>
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre_producto %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
								<p><a href="./profile/<%=productos[i].usuario_id%>"> Publicado por <%=productos[i].usuarios.username%></a></p>

							</article>
						</a>
					</section>
				</div>
			<% } %>

	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for (let i = 0; i < productos.length; i++) { %>
				<% if (productos[i].comentarios.length > 2) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= productos[i].id %>">
							<figure class="product-box_image">
								<% if(new Date(productos[i].createdAt) > new Date('2024-06-21')){ %>
									<img src= "<%=productos[i].imagen %>" alt="<%=productos[i].nombre_producto%>">
									<% }else{ %>
									<img src= "../imagenes/<%=productos[i].imagen %>" alt="<%=productos[i].nombre_producto%>">
									<% } %>							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].nombre_producto %></h2>
								<p><%= productos[i].descripcion %></p>
								<p>Comentarios: <%= productos[i].comentarios.length %></p>
								<p><a href="./profile/<%=productos[i].usuario_id%>"> Publicado por <%=productos[i].usuarios.username%></a></p>

							</article>
						</a>
					</section>
				</div>
				<% } %>

			<% } %>

		</div>
	</div>
	<!-- /Más comentados -->

  <%- include('./partials/footer.ejs') %>
  