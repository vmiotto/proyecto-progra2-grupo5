<%- include('./partials/headerlogueado.ejs') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12"> <h2 class="forms">
				<form action="/editar-perfil" method="POST"> 
					<label for="email">Email:</label>
					<input type="email" id="email" name="email" value="<%= usuario.email %>" ><br><br>
					
					<label for="usuario">Usuario:</label>
					<input type="text" id="usuario" name="usuario" value="<%= usuario.usuario %>" ><br><br>
					
					<label for="contraseña">Contraseña:</label>
					<input type="password" id="contraseña" name="contraseña" ><br><br>
					
					<label for="fecha_nacimiento">Fecha de nacimiento:</label>
					<input type="date" id="fecha_nacimiento" name="fecha_nacimiento" value="<%= usuario.nacimiento %>" ><br><br>
					
					<label for="nro_documento">Número de documento:</label>
					<input type="number" id="nro_documento" name="nro_documento" value="<%= usuario.dni %>" ><br><br>
					
					<label for="foto_perfil">Foto de perfil (URL):</label>
					<input type="text" id="foto_perfil" name="foto_perfil" value="<%= usuario.fotoperfil %>"><br><br>
					
					<input type="submit" value="Actualizar perfil"> 
				</form>
				</h2>
			
			</h2>


			<%- include('./partials/footer.ejs') %>