<% if (locals.user != undefined) { %>
	<%- include('./partials/headerlogueado.ejs')%>
<% } else { %>
	<%- include('./partials/header.ejs')%>
<% } %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src= ' <%= usuario.fotoperfil%>'  alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=usuario.usuario%>
						<a href="profile/miperfil">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="profile">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (let i = 0; i < 8; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= datos[i].id %>">
							<figure class="product-box_image">
								<img src= " <%=datos[i].foto %>" alt="<%=datos[i].nombre%>">
							</figure>
							<article class="product-box_data">
								<h2><%= datos[i].nombre %></h2>
								<p><%= datos[i].descripcion %></p>
								<p>Comentarios: <%= datos[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
	<!-- /Mis productos -->


	<%- include('./partials/footer.ejs') %>